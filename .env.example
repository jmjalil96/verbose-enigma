# Server
NODE_ENV=development
PORT=3000

# Logging
LOG_LEVEL=info

# Proxy (set to true if behind a load balancer/reverse proxy)
TRUST_PROXY=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# CORS (comma-separated origins, or "*" for all)
CORS_ORIGIN=*

# Request
REQUEST_TIMEOUT_MS=30000
REQUEST_BODY_LIMIT=100kb

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/verbose_enigma

# Auth
SESSION_COOKIE_NAME=session

# Redis (for job queue)
REDIS_URL=redis://localhost:6379

# Email
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@example.com
SMTP_HOST=localhost
SMTP_PORT=1025
# RESEND_API_KEY=re_xxxx  # Required if EMAIL_PROVIDER=resend
APP_URL=http://localhost:3000

# Storage (Cloudflare R2) - optional, required when using storage service
# R2_ACCOUNT_ID=your_account_id
# R2_ACCESS_KEY_ID=your_access_key
# R2_SECRET_ACCESS_KEY=your_secret_key
# R2_BUCKET_NAME=your_bucket_name
# R2_PUBLIC_URL=https://your-bucket.r2.dev
