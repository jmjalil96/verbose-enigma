# Server
NODE_ENV=development
PORT=3000

# Logging
LOG_LEVEL=info

# Proxy (set to true if behind a load balancer/reverse proxy)
TRUST_PROXY=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# CORS (comma-separated origins, or "*" for all)
CORS_ORIGIN=*

# Request
REQUEST_TIMEOUT_MS=30000
REQUEST_BODY_LIMIT=100kb

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/verbose_enigma
